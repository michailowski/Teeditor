<ContentDialog
    x:Class="Teeditor.TeeWorlds.MapExtension.Internal.Views.Dialogs.AddBookmarkDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemChromeAltMediumHighColor}"
    Title="Add the current camera view to bookmarks"
    PrimaryButtonText="Add"
    PrimaryButtonClick="BookmarkAddBtn_Click"
    CloseButtonText="Cancel">

    <Grid>
        <TextBox x:Name="BookmarkLabel" Height="30" PlaceholderText="Bookmark Name" />
    </Grid>
</ContentDialog>
